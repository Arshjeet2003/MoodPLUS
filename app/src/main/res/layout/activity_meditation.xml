<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_1"
            android:padding="16dp"
            android:backgroundTint="#FF90EE90"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="clip_vertical"
                    android:src="@drawable/guru" />

                <TextView
                    android:id="@+id/music1_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/atma_semibold"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:text=" Yoga Meditation"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="55dp"
                    android:src="@drawable/play_black" />


            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp">


                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/atma_semibold"
                    android:layout_marginLeft="0dp"
                    android:layout_height="150dp"
                    android:text=" This type of meditation involves combining physical postures (asanas) with breathing techniques (pranayama) and meditation. It is often practiced as part of a yoga class or on its own."

                    android:textSize="22sp"
                    android:paddingBottom="3dp"/>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_1"
            android:padding="16dp"
            android:backgroundTint="#90EE90"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="clip_vertical"
                    android:src="@drawable/guru" />

                <TextView
                    android:id="@+id/music2_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/atma_semibold"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:text=" Chakra Meditation"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/play_black"
                    />


            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp">


                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/atma_semibold"
                    android:layout_marginLeft="0dp"
                    android:layout_height="150dp"
                    android:text="This type of meditation involves focusing on the seven chakras or energy centers in the body. It can involve chanting, visualization, or using specific colors and symbols to activate each chakra and achieve balance and harmony."
                    android:textSize="22sp"
                    android:paddingBottom="3dp"/>
            </ScrollView>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_1"
            android:padding="16dp"
            android:backgroundTint="#90EE90"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="clip_vertical"
                    android:src="@drawable/guru" />

                <TextView
                    android:id="@+id/music3_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/atma_semibold"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:text=" Ujjaya Meditation"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/play_black"
                    />


            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp">


                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/atma_semibold"
                    android:layout_marginLeft="0dp"
                    android:layout_height="150dp"
                    android:text="This type of meditation involves focusing on feelings of love, kindness, and compassion toward oneself and others. It can involve repeating phrases or visualizing positive experiences."
                    android:textSize="22sp"
                    android:paddingBottom="3dp"/>
            </ScrollView>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_1"
            android:padding="16dp"
            android:backgroundTint="#90EE90"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="clip_vertical"
                    android:src="@drawable/guru" />

                <TextView
                    android:id="@+id/music4_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/atma_semibold"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:text=" Deep Meditation"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/play_black"
                    />

            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/atma_semibold"
                    android:layout_marginLeft="0dp"
                    android:layout_height="150dp"
                    android:text="This type of meditation involves repeating a mantra or sound to focus the mind and achieve a state of relaxation. It is usually done for 20 minutes twice a day."
                    android:textSize="22sp"
                    android:paddingBottom="3dp"/>
            </ScrollView>


        </LinearLayout>


    </LinearLayout>
</ScrollView>